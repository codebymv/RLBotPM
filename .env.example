# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# Data Source (Real crypto data only)
DATA_SOURCE=coinbase
DATA_STRICT_MODE=true
DATA_INTERVAL=1h
REQUIRE_HISTORICAL_DAYS=30
DATA_SYMBOLS=BTC-USD,ETH-USD

# Bot Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
MODEL_SAVE_PATH=./bot/models

# API Configuration (for deployed API service)
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,https://your-dashboard.railway.app

# Dashboard Configuration (for frontend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Risk Management
MAX_DAILY_LOSS_USD=20
MAX_POSITION_SIZE_PCT=0.20
MAX_OPEN_POSITIONS=3

# Live Trading Safety
LIVE_TRADING_ENABLED=false
LIVE_ALLOWED_SIDES=no
LIVE_ALLOW_BUY_YES=false

# Alerts (SMTP)
ALERT_EMAIL_TO=
ALERT_SMTP_HOST=
ALERT_SMTP_PORT=587
ALERT_SMTP_USER=
ALERT_SMTP_PASS=
ALERT_SMTP_FROM=

# Alerts (Webhook, e.g. Resend relay endpoint)
ALERT_WEBHOOK_URL=
ALERT_WEBHOOK_BEARER_TOKEN=
ALERT_WEBHOOK_TIMEOUT_SECONDS=5

# Alerts (AICallerSaaS / Gleam Voice Calls)
# Triggers an outbound voice alert call via a Gleam EVENT_ALERTS agent.
# GLEAM_TRIGGER_URL = Full trigger endpoint URL from Gleam agent config panel
#                     e.g. https://gleamai.dev/api/agents/<agent-id>/trigger
# GLEAM_TRIGGER_KEY = Bearer token (trg_live_...) from Gleam agent config panel
GLEAM_TRIGGER_URL=
GLEAM_TRIGGER_KEY=

# Training
TRAINING_EPISODES=100000
CHECKPOINT_FREQUENCY=10000
